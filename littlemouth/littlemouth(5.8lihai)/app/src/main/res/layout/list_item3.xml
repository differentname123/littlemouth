<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Num"
            android:layout_width="25dp"
            android:layout_height="100dp"
            android:gravity="center_vertical|center_horizontal" />

        <ImageView
            android:id="@+id/primary_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/Num"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/primary_img"
            android:text="家有小农女"
            android:textColor="#C0C0C0"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/user_name"
            android:text="菜系："
            android:textSize="11sp" />

        <TextView
            android:id="@+id/style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/user_name"
            android:text="川菜"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/primary_img"
            android:text="海南鸡腿"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/primary_img"
            android:text="喜欢："
            android:textColor="#C0C0C0" />

        <TextView
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/love"
            android:text="125" />

        <TextView
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/like_num"
            android:text="收藏："
            android:textColor="#C0C0C0" />

        <TextView
            android:id="@+id/collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/collect"
            android:text="29" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/primary_img"
            android:background="@color/white"

            />
    </RelativeLayout>




</LinearLayout>